{% extends "_layouts/app" %}

{% block content %}
<!-- ======= Services Section ======= -->
{% set services = craft.entries.section('services').all() %}

<!-- Section: services -->
<section id="service" class="home-section color-dark bg-gray">
    <div class="container marginbot-50">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <div class="section-heading text-center">
                        <h2 class="h-bold">What we can do for you</h2>
                        <div class="divider-header"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <div class="container">
            <div class="row animatedParent">
                {% set count = 0 %}
                {% for service in services %}
                    {% set serviceBody = service.serviceBody.all() %}
                    {% if serviceBody | length %}
                        {% for item in serviceBody %}
                            {% if item.type == 'servicePoint' %}
                                {% set count = count + 1 %}
                                <div class="col-md-4">
                                    <div class="animated rotateInDownLeft">
                                        <div class="service-box">
                                            <div class="service-icon">
                                               <img class="img-responsive" src="{{ item.image.one.url }}" alt="{{ item.image.title }}"/>
                                            </div>
                                            <div class="service-desc">
                                                <h5>{{ service.title }}</h5>
                                                <div class="divider-header"></div>
                                                <p>
                                                {{ item.description }}
                                                </p>
                                                <a href="{{ service.url }}" class="btn btn-skin">Learn more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<!-- /Section: services -->

<!-- End Services Section -->
{% endblock %}